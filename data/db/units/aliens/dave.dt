			  emissive = color: 0, 1, 0

			  time0 = 0
			  color0 = colora: 0, 1, 0, 0

			  time1 = 3
			  color1 = colora: 0, 1, 0, 0.4

			  time2 = 30
			  color2 = colora: 0, 1, 0, 0.25

			  time4 = 100
