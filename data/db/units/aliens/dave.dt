    healing_taken_debuff_duration = 8
  }

  immune_to : {
  }
  
  ShootProjectile {
    model = Data/Models/Effects/TraceBullet/MasterProjectile.nif {
      CTrailController trail {
			  emitter = Scene Root
			  texture = data/textures/trails/energy_trail1.dds
