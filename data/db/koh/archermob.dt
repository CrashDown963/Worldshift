Mob ArcherMob : BaseMob {
  name = Archer
  model = data/models/units/KOHUnits/Archer.kfm
  speed = 450

  sight = 2000
  aggro_range = var:sight
  stats :{
    hp = 1000
    armor = 5
    psi = 0
