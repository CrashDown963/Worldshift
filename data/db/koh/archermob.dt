  max_attack_range = 3000

  impacts : LivingUnitImpacts
  
  animation {
    anim_set MELEE = loop {
      hit_1 = 100,1,1
      hit_3 = 100,1,1
    }
  }
  
  COrientationController orientation {
    rot_speed = 180
    max_tilt = 0
  }  
  
  CWeaponController weapon_daggers {
    active = 1
    can_crit = 1
